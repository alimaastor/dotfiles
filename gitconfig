[alias]
    st = status
    co = checkout
    br = branch
    p = rebase
    ci = commit
    gr = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset%n' --abbrev-commit --date=relative --branches
    ol = log --oneline

