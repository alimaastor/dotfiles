###### SET PS1 ####
RESET="\[\017\]"

INVERT="\[\033[7;1m\]"
NORMAL="\[\033[0m\]"
RED="\[\033[31;1m\]"
YELLOW="\[\033[33;1m\]"
WHITE="\[\033[37;1m\]"
GREEN="\[\033[32;1m\]"

SMILEY="${GREEN}:)${NORMAL}"
FROWNY="${RED}:S${NORMAL}"

CURRENT_DIR="${INVERT}[ \w ]${NORMAL}"
PROMPT="${GREEN}>${NORMAL}${YELLOW}>${NORMAL}${RED}>${NORMAL}"

SELECT="if [ \$? = 0 ]; then echo \"${SMILEY}\"; else echo \"${FROWNY}\"; fi"

PS1="${CURRENT_DIR}\n\`${SELECT}\` ${PROMPT} "
#### END SET PS1 ####
